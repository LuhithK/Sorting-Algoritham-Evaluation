        <!-- The columns will be dynamically created in the controller -->
    </TableView>
    <Button fx:id="showColumnButton" layoutX="870.7" layoutY="20" prefHeight="32.9" prefWidth="0" text="" />

    <!-- ComboBox for numeric column selection -->
    <ComboBox fx:id="numericColumnComboBox" layoutX="720.7" layoutY="20" onAction="#handleNumericColumnSelection" prefHeight="49.0" prefWidth="170.0" promptText="Select numeric column" style="-fx-background-color: #78B3CE; -fx-text-fill: white; -fx-prompt-text-fill: black;" />

